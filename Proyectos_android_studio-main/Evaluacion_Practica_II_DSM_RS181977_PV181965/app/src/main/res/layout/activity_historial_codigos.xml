<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialCodigos">




    <LinearLayout
        android:id="@+id/contenedor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial de códigos"
            android:textSize="30dp"
            android:textColor="#8E9295"
            android:fontFamily="@font/montserrat_bold"
            android:textAlignment="center"
            android:padding="10dp"
            />


        <TextView
            android:id="@+id/codigoDeExamen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estos son los examénes a los que tienes acceso."
            android:textSize="24dp"
            android:textColor="#E4656467"
            android:fontFamily="@font/montserrat_light"
            android:textAlignment="center"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/linea"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/contenedor3"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/contenedor1">

        <ListView
            android:id="@+id/ListaHistorial"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            ></ListView>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/contenedor3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/contenedor2"

        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BotonVolver"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/ic_boton4"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:paddingLeft="75dp"
            android:paddingRight="75dp"
            android:text="Volver"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableLeft="@drawable/ic_return"
            android:drawablePadding="10dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>