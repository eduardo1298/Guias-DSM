<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroupInformatica"
        android:layout_width="309dp"
        android:layout_height="199dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="395dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/radioButtonRedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redes" />

        <RadioButton
            android:id="@+id/radioButtonDesarrollo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desarrollo" />

        <RadioButton
            android:id="@+id/radioButtonAuditoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Auditoria" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="87dp"
        android:text="¿Cuál es tu área de énfasis de informática preferida?"
        app:layout_constraintBottom_toTopOf="@+id/radioGroupInformatica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>